<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="static/semantic/dist/semantic.min.css">

      </head>
      <body>



        <div class="ui grid">
            <div class="four wide column">
              <h3 class="ui dividing header">Online Users :<span id="userscount"></span></h3>
            </div>
            <div class="eight wide column">
              <h3 class="ui dividing header">Messages</h3>

              <div id="messages" class="ui comments">
                  <%messages.forEach(function(message){%>
                    <div class="comment">
                        <div class="content">
                          <a class="author"><%=message.sender %></a>
                          <div class="metadata">
                          <span class="date"><%=message.date %></span>
                                </div>
                                <div class="text">
                                  <%=message.value %>

                                </div>
                                </div>
                                </div>
                  <%})%>

            </div>


              <form id="mf" action="">
                  <div id="md" class="ui action input">
                      <input id="m" autocomplete="off" />
                      <button class="circular ui animated  orange basic button" tabindex="0">
                        <div class="visible content">Send</div>
                        <div class="hidden content">
                          <i class="right arrow icon"></i>
                        </div>
                      </button>
                  </div>
              </form>
          </div>
        <div id="ld" class="four wide column">
        <h3 class="ui dividing header">Login</h3>
          <form id="lf" action="">
            <div></div>
            <input  id="l" type="text"/>
            <button class="ui orange basic button" >Login</button>
          </form>

        </div>
          </div>



<script type="text/javascript" src="static/js/socket.io.js"></script>
<script type="text/javascript" src="static/js/jquery-3.3.1.js"></script>
<script type="text/javascript" src="static/js/app.js"></script>
<script src="static/semantic/dist/semantic.min.js"></script>




  </body>

</html>
